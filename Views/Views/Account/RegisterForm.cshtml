@model BillAdmin.Models.TAdminMgmt

@{
    ViewBag.Title = "Register";

    Layout = "~/Views/Shared/_LayoutWitoutNav.cshtml";


}
<style type="text/css">
    .registerConten{
       font-family: Raleway, sans-serif;
       background-color: white;
    }
     
    .control-label {
        text-align: right;
        line-height: 40px;
        margin-bottom: 0px;
    }

    .login-register {
        font-size: 11px;
        text-align: center;
    }

    body {
        font-family: Arial;
        font-size: 10pt;
        background-color: #f5f8fa;
    }

    .error {
        text-align: left;
        line-height: 40px;
        color: red;
    }
</style>

<div class="registerConten">
    @using (Html.BeginForm("RegisterForm", "Account", FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="registerTitle">
                <h1 class="h3 font-weight-normal" style="text-align: center;background-color:#ECF0F1;">회원가입</h1>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group row">
                @Html.LabelFor(model => model.AdminID, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.EditorFor(model => model.AdminID, new { htmlAttributes = new { @class = "form-control", @id = "AdminID" } })
                @Html.ValidationMessageFor(m => m.AdminID, "", new { @class = "error col-md-4" })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AdminPwd, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.PasswordFor(model => model.AdminPwd, new { htmlAttributes = new { @class = "form-control " } })
                @Html.ValidationMessageFor(m => m.AdminPwd, "", new { @class = "error col-md-4" })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger col-md-4" })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AdminName, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdminName, "", new { @class = "text-danger col-md-4" })
                @Html.ValidationMessageFor(model => model.AdminName)

            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Dept, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.EditorFor(model => model.Dept, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dept, "", new { @class = "text-danger col-md-4" })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger col-md-4" })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.OfficePhoneNo, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.EditorFor(model => model.OfficePhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OfficePhoneNo, "", new { @class = "text-danger col-md-4" })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.MPhoneNo, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.EditorFor(model => model.MPhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MPhoneNo, "", new { @class = "text-danger col-md-4" })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.EmailAddr, htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.EditorFor(model => model.EmailAddr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.EmailAddr, "", new { @class = "error col-md-4" })
            </div>
            <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
            <br />
            <div class="form-group row">
                <div class="col-md-4"></div>
                <button class="btn btn-light" type="submit">Register</button> &nbsp;
                <a class="btn btn-light" href="@Url.Action("LoginForm", "Account")" role="button">Login</a>
                <div class="col-md-2">

                </div>
            </div>

        </div>
    }
    <br />
</div>
<br />

@if (@ViewBag.Message != null)
{
    <script type="text/javascript">
        $(function () {
            alert("@ViewBag.Message")
        });
    </script>
}