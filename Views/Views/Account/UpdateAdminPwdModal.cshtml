@model BillAdmin.Models.TAdminMgmt

@{
    ViewBag.Title = "UpdateAdminPwdModal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="width:100%;margin-top:2%">

    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#modalMainAdminPwdUpdate">Open Modal</a>


    <div class="modal ui-draggable in" id="modalMainAdminPwdUpdate"role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">닫기</span></button>
                    <h4 class="modal-title">관리자 비밀번호 변경</h4>
                </div>
                <div class="modal-body">
                    @{
                        foreach (System.Data.DataRow dr in ViewBag.adminPwdUpd.Rows)
                        {
                            <form id="myForm" method="post">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right">AdminID</label>
                                    <div class="col-sm-9">
                                        <input type="text" value="@dr["AdminID"]" name="AdminID" class="col-xs-10 col-sm-8" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right">AdminPwd</label>
                                    <div class="col-sm-9">
                                        <input type="password" id="adminPwd" value="@dr["AdminPwd"]" name="AdminPwd" class="col-xs-10 col-sm-8" />
                                    </div>
                                </div>

                                <div class="form-group">
                                        <div class="col-sm-9">
                                            <input type="submit" id="btnSubmit" class="btn btn-primary" />
                                        </div>
                                    </div>
                            </form>
                        }

                    }
                    <div style="text-align:center;display:none" id="loaderDiv">
                        <img src="~/images/InternetSlowdown_Day.gif" width="150" /> @* //put any image in content folder*@
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="btnModifyAdminPwd" class="btn btn-primary">Save changes</button>
                </div>
               
            </div>
        </div>
    </div>

</div>
