@model BillAdmin.Models.TAdminLog

@{
    ViewBag.Title = "AdminLogLst";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AdminLogLst</h2>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">관리자/로그인 -> 로그인 세션 이력</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="dataTables_length" id="dataTable_length">
                            @using (Html.BeginForm("AdminLogLst", "Admin", FormMethod.Post))
                            {
                                <span>관리자 아이디 :</span> @Html.TextBox("strAdminId")
                                <span>&nbsp;&nbsp;</span>
                                <span>IP 주소 :</span> @Html.TextBox("strIPAddr")
                                <input type="submit" value="Search" />
                            }

                            <label> </label>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div id="dataTable_filter" class="dataTables_filter">

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered dataTable text-center" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead style="background-color: #3498DB; color: white;">
                                <tr>
                                    <th>MenuNo</th>
                                    <th>MenuName</th>
                                    <th>MenuLink</th>
                                    <th>MethodName</th>
                                    <th>IPAddr</th>
                                    <th>AdminID</th>
                                    <th>RegDate</th>
                                </tr>
                            </thead>
                            @using (Html.BeginForm())
                            {
                                foreach (System.Data.DataRow dr in ViewBag.AdminLogList.Rows)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@dr["MenuNo"]</td>
                                            <td>@dr["MenuName"]</td>
                                            <td>@dr["MenuLink"]</td>
                                            <td>@dr["MethodName"]</td>
                                            <td>@dr["IPAddr"]</td>
                                            <td>@dr["AdminID"]</td>
                                            <td>@dr["RegDate"]</td>
                                        </tr>
                                    </tbody>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>